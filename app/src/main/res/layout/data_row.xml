<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:stretchColumns="*">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center">
                <TextView
                        android:text="地区0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/textRegion" android:textAlignment="center"
                        android:gravity="center|center_vertical" android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="ActiveCases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textActiveCases"
                        android:textAlignment="center" android:textColor="#FF8522"/>
                <TextView
                        android:text="NewActive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textNewActive"
                        android:textAlignment="center" android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Overall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textOverallCases"
                        android:textAlignment="center" android:textColor="#BE0D00"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textNewCases"
                        android:textAlignment="center" android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="deaths"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textDeaths"
                        android:textAlignment="center" android:textColor="#4D000000"
                        android:textAllCaps="false"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textNewDeaths"
                        android:textAlignment="center" android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Cured"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textCured"
                        android:textAlignment="center" android:textColor="#00AD07"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textNewCured"
                        android:textAlignment="center" android:textSize="12sp"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>

